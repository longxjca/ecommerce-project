  </head>

  <body>
    <p>
        <%= link_to 'Home', root_path %> |
        <%= link_to 'Products', products_path%> |
        <%= link_to 'Genres', genres_path%> |
        <%= link_to 'About us', permalink_path('about_us')%> |


        <br>
        <br>


    </p>
    <%= yield %>
  </body>
</html>
