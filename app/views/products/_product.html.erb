<div class="column">

<div class="card">
<div class="card-content">
    <div class="content">
      <p class="title"><%= link_to product.name, product%></p>
      <p>Genre: <%= render product.genres%></p>
    </div>
    <footer class="card-footer">
      <p class= "card-footer-item">Price:<%= product.price%></p>
      <p class= "card-footer-item">Release date:<%= product.release_date%></p>
      <p class= "card-footer-item">Publisher: <%= product.publisher.name%></p>
    </footer>

</div>
</div>
</div>




