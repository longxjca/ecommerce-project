
  <%= form_with(url: search_products_path, method: :get, local: true) do %>
    <div class="field is-grouped">
    <div class="control is-expanded">
  <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search For Games') %>

  </div>

  <div class= "control is-expanded">
    <%= select_tag(:category, options_for_select([
      ['All', nil],
      ['Action', "Action"],
      ['Adventure', "Adventure"],
      ['Animation & Modeling', "Animation & Modeling"],
      ['Casual', "Casual"],
      ['Free to Play', "Free to Play"],
      ['Indie', "Indie"],
      ['RPG', "RPG"],
      ['Racing', "Racing"],
      ['Simulation', "Simulation"],
      ['Strategy', "Strategy"],
      ['Video Production', "Video Production"]
    ]))%>

  </div>
  <div class="control is-expanded">
    <%= select_tag(:time, options_for_select([
      ['All Times', 'All Times'],
      ['New', 'New'],
      ['Recently Updated', 'Recently Updated']
    ]))%>
  </div>

  <div class="control">
   <%= submit_tag("Search", class: "button is-primary") %>
  </div>

</div>
<% end %>